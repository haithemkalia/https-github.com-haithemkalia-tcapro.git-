{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "vercel_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "vercel_app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL": "true"
  },
  "functions": {
    "vercel_app.py": {
      "maxDuration": 30
    }
  },
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt"
}